/*
continue
La sentencia salta a la siguiente iteracion
*/

const invitados = ['Carlos', 'Christian', 'Jorge', 'Estefania', 'Erika', 'Manuel'];
console.log('Lista de personas aceptadas:');

for(let i =0; i < invitados.length; i++){
    if (invitados[i] === 'Jorge'){
        continue;
    }
    console.log(invitados[i]);
}